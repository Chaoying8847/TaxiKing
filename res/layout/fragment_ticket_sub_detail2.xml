<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee" >

    <LinearLayout
        android:id="@+id/view_func_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="10dp"
        android:baselineAligned="false"
        android:orientation="horizontal" >
        
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:gravity="center" >
            
            <Button
                android:id="@+id/button_ok"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="@android:string/ok"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:background="@drawable/bg_button" />
        </LinearLayout>
        
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:layout_above="@id/view_func_bar" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/grey_color"
                android:textSize="12sp"
                android:enabled="false"
                android:text="@string/ticket_date"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
    
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp">
            <TextView
                android:id="@+id/txt_date"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="12sp"
                android:gravity="center_vertical"
                android:background="@android:color/white"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/grey_color"
                android:textSize="12sp"
                android:text="@string/ticket_obs_gravity"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/grey_color"
                android:textSize="12sp"
                android:text="@string/ticket_obs_temp"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/grey_color"
                android:textSize="12sp"
                android:text="@string/ticket_s_w"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
    
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp">
            <TextView
                android:id="@+id/txt_obs_gravity"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="12sp"
                android:gravity="center_vertical"
                android:background="@drawable/edit_outline"/>
            <TextView
                android:id="@+id/txt_obs_temp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="12sp"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:background="@drawable/edit_outline"/>
            <TextView
                android:id="@+id/txt_s_w"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="12sp"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:background="@drawable/edit_outline"/>
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp">
            <TextView
                android:layout_width="42dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/grey_color"
                android:textSize="12sp"
                android:text="@string/ticket_gauge"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/grey_color"
                        android:textSize="12sp"
                        android:text="@string/ticket_oil"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:textColor="@color/grey_color"
                        android:textSize="12sp"
                        android:text="@string/ticket_oil_levels"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="3dp"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/grey_color"
                        android:textSize="12sp"
                        android:text="@string/ticket_tank_table"
                        android:layout_marginLeft="2dp"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/grey_color"
                        android:textSize="12sp"
                        android:text="@string/ticket_tank"
                        android:layout_marginLeft="2dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/grey_color"
                        android:textSize="12sp"
                        android:text="@string/ticket_temp"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/grey_color"
                        android:textSize="12sp"
                        android:text="@string/ticket_feet"
                        android:layout_marginLeft="17dp"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/grey_color"
                        android:textSize="12sp"
                        android:text="@string/ticket_inch"
                        android:layout_marginLeft="2dp"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/grey_color"
                        android:textSize="12sp"
                        android:text="@string/ticket_qrt"
                        android:layout_marginLeft="2dp"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/grey_color"
                        android:textSize="12sp"
                        android:text="@string/ticket_barrels"
                        android:layout_marginLeft="2dp"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/grey_color"
                        android:textSize="12sp"
                        android:text="@string/ticket_bottoms"
                        android:layout_marginLeft="2dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp">
            <TextView
                android:layout_width="42dp"
                android:layout_height="match_parent"
                android:textColor="@color/grey_color"
                android:textSize="12sp"
                android:text="@string/ticket_high"
                android:gravity="center_vertical"/>
            <TextView
                android:id="@+id/txt_oil_temp_h"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="12sp"
                android:gravity="center_vertical"
                android:background="@drawable/edit_outline"/>
            <TextView
                android:layout_width="15dp"
                android:layout_height="match_parent"
                android:textColor="@color/grey_color"
                android:textSize="12sp"
                android:text="@string/ticket_f"
                android:gravity="center"/>
            <TextView
                android:id="@+id/txt_feet_h"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="12sp"
                android:layout_marginLeft="2dp"
                android:gravity="center_vertical"
                android:background="@android:color/white"/>
            <TextView
                android:id="@+id/txt_oil_levels_h"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="12sp"
                android:layout_marginLeft="2dp"
                android:gravity="center_vertical"
                android:background="@android:color/white"/>
            <TextView
                android:id="@+id/txt_qrt_h"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="12sp"
                android:layout_marginLeft="2dp"
                android:gravity="center_vertical"
                android:background="@android:color/white"/>
            <TextView
                android:id="@+id/txt_tank_table_h"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="12sp"
                android:layout_marginLeft="2dp"
                android:gravity="center_vertical"
                android:background="@android:color/white"/>
            <TextView
                android:id="@+id/txt_tank_bottoms_h"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="12sp"
                android:layout_marginLeft="2dp"
                android:gravity="center_vertical"
                android:background="@android:color/white"/>
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="4dp">
            <TextView
                android:layout_width="42dp"
                android:layout_height="match_parent"
                android:textColor="@color/grey_color"
                android:textSize="12sp"
                android:text="@string/ticket_low"
                android:gravity="center_vertical"/>
            <TextView
                android:id="@+id/txt_oil_temp_l"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="12sp"
                android:gravity="center_vertical"
                android:background="@drawable/edit_outline"/>
            <TextView
                android:layout_width="15dp"
                android:layout_height="match_parent"
                android:textSize="12sp"
                android:textColor="@color/grey_color"
                android:text="@string/ticket_f"
                android:gravity="center"/>
            <TextView
                android:id="@+id/txt_feet_l"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="12sp"
                android:layout_marginLeft="2dp"
                android:gravity="center_vertical"
                android:background="@android:color/white"/>
            <TextView
                android:id="@+id/txt_oil_levels_l"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="12sp"
                android:layout_marginLeft="2dp"
                android:gravity="center_vertical"
                android:background="@android:color/white"/>
            <TextView
                android:id="@+id/txt_qrt_l"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="12sp"
                android:layout_marginLeft="2dp"
                android:gravity="center_vertical"
                android:background="@android:color/white"/>
            <TextView
                android:id="@+id/txt_tank_table_l"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="12sp"
                android:layout_marginLeft="2dp"
                android:gravity="center_vertical"
                android:background="@android:color/white"/>
            <TextView
                android:id="@+id/txt_tank_bottoms_l"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="12sp"
                android:layout_marginLeft="2dp"
                android:gravity="center_vertical"
                android:background="@android:color/white"/>
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/grey_color"
                android:textSize="12sp"
                android:text="@string/ticket_total_barrels"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/grey_color"
                android:textSize="12sp"
                android:text="@string/ticket_net_barrels"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
    
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp">
            <TextView
                android:id="@+id/txt_total_barrels"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="12sp"
                android:gravity="center_vertical"
                android:background="@android:color/white"/>
            <TextView
                android:id="@+id/txt_net_barrels"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="12sp"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:background="@android:color/white"/>
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="4dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:textColor="@color/grey_color"
                android:textSize="12sp"
                android:text="@string/ticket_meter_off"/>
            <EditText
                android:id="@+id/txt_meter_off"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="12sp"
                android:inputType="numberDecimal"
                android:gravity="center_vertical"
                android:background="@android:color/white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="2dp"
                android:textColor="@color/grey_color"
                android:textSize="12sp"
                android:text="@string/ticket_seal_off"/>
            <EditText
                android:id="@+id/txt_seal_off"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="12sp"
                android:inputType="numberDecimal"
                android:gravity="center_vertical"
                android:background="@android:color/white"/>
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="4dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="7dp"
                android:textColor="@color/grey_color"
                android:textSize="12sp"
                android:text="@string/ticket_meter_on"/>
            <EditText
                android:id="@+id/txt_meter_on"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="12sp"
                android:inputType="numberDecimal"
                android:gravity="center_vertical"
                android:background="@android:color/white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="7dp"
                android:textColor="@color/grey_color"
                android:textSize="12sp"
                android:text="@string/ticket_seal_on"/>
            <EditText
                android:id="@+id/txt_seal_on"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="12sp"
                android:inputType="numberDecimal"
                android:gravity="center_vertical"
                android:background="@android:color/white"/>
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textColor="@color/grey_color"
                android:textSize="12sp"
                android:text="@string/ticket_loaded_miles"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textColor="@color/grey_color"
                android:textSize="12sp"
                android:text="@string/ticket_meter_factor"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textColor="@color/grey_color"
                android:textSize="12sp"
                android:text="@string/ticket_metered_barrels"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        </LinearLayout>
    
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/txt_loaded_miles"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:textSize="12sp"
                android:gravity="center_vertical"
                android:background="@drawable/edit_outline"/>
            <TextView
                android:id="@+id/txt_meter_factor"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:textSize="12sp"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:background="@android:color/white"/>
            <TextView
                android:id="@+id/txt_metered_barrels"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:textSize="12sp"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:background="@android:color/white"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/grey_color"
                android:textSize="12sp"
                android:text="@string/ticket_remarks"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/grey_color"
                android:textSize="12sp"
                android:text="@string/ticket_rejected_reason"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
    
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp">
            <TextView
                android:id="@+id/txt_remarks"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="12sp"
                android:gravity="center_vertical"
                android:background="@android:color/white"/>
            <TextView
                android:id="@+id/txt_rejected_reason"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="12sp"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:background="@android:color/white"/>
        </LinearLayout>
    </LinearLayout>
    </ScrollView>

</RelativeLayout>