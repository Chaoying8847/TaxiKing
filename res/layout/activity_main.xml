<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:id="@+id/layout_refresh"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:background="@drawable/bg_tab_nm"
        android:padding="10dp"
        android:gravity="right"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true" >
        <Button
	        android:id="@+id/btn_refresh"
	        android:layout_width="40dp"
	        android:layout_height="match_parent"
	        android:layout_alignParentRight="true"
	        android:background="@drawable/btn_refresh"/>
        <Button
	        android:id="@+id/btn_add"
	        android:layout_width="40dp"
	        android:layout_height="match_parent"
	        android:layout_marginRight="40dp"
	        android:background="@drawable/btn_plus"/>
    </RelativeLayout>

	<RadioGroup
	    android:id="@+id/view_tab"
	    android:layout_width="fill_parent"
	    android:layout_height="60dp"
	    android:orientation="horizontal"
	    android:background="@drawable/bg_tab_nm"
	    android:checkedButton="@+id/radio_open"
	    android:layout_toLeftOf="@id/layout_refresh" >
	    
	    <RadioButton
	        android:id="@+id/radio_open"
	        android:layout_width="wrap_content"
	        android:layout_height="fill_parent"
	        android:gravity="center"
	        android:button="@null"
	        android:text="@string/tab_title_open"
	        android:textStyle="bold"
	        android:background="@drawable/bg_tab" />
		
	    <View
	        android:layout_width="1dp"
	        android:layout_height="fill_parent"
	        android:layout_marginTop="10dp"
	        android:layout_marginBottom="10dp"
	        android:background="#19000000" />
	    
	    <RadioButton
	        android:id="@+id/radio_submitted"
	        android:layout_width="wrap_content"
	        android:layout_height="fill_parent"
	        android:gravity="center"
	        android:button="@null"
	        android:text="@string/tab_title_submitted"
	        android:textStyle="bold"
	        android:background="@drawable/bg_tab" />
	    
	    <View
	        android:layout_width="1dp"
	        android:layout_height="fill_parent"
	        android:layout_marginTop="10dp"
	        android:layout_marginBottom="10dp"
	        android:background="#19000000" />
	    
	    <RadioButton
	        android:id="@+id/radio_closed"
	        android:layout_width="wrap_content"
	        android:layout_height="fill_parent"
	        android:gravity="center"
	        android:button="@null"
	        android:text="@string/tab_title_closed"
	        android:textStyle="bold"
	        android:background="@drawable/bg_tab" />
	    
	</RadioGroup>
    
    <RelativeLayout
        android:id="@+id/view_body"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/view_tab" />

</RelativeLayout>